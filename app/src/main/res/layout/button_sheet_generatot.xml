<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_generator_core"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:scrollbarSize="10sp"
    android:weightSum="11.5"
    app:behavior_hideable="false"
    app:behavior_peekHeight="13dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageView
        android:id="@+id/small_line"
        android:layout_width="100dp"
        android:layout_height="8dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/small_line" />

    <LinearLayout
        android:id="@+id/bottom_sheet_generator"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/maket_butto_sheet"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:id="@+id/text_botton_sheet_generatot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="@drawable/maket_up"
            android:clickable="true"
            android:gravity="center"
            android:text="Рекомендатор желаний"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />

        <LinearLayout
            android:id="@+id/lin_recomendator"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:textStyle="bold"
            android:weightSum="10">

            <TextView
                android:id="@+id/text_module_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Критерии создания :"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/lin_module_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="14">

                <CheckBox
                    android:id="@+id/checkBox_module_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:autoSizeTextType="none"
                    android:checked="false"
                    android:text="Выбрать критерии случайно"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="11"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <CheckBox
                        android:id="@+id/checkBox_search"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:autoSizeTextType="none"
                        android:text="Учитывать результаты поиска"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/checkBox_edit"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:autoSizeTextType="none"
                        android:text="Учитывать кол-во изменений"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/checkBox_notifocations"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:autoSizeTextType="none"
                        android:text="Учитывать напоминания желаний"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/create_botton_sheet"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:background="@drawable/maket_button_sheet"
            android:text="Создать" />
    </LinearLayout>
</LinearLayout>